<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".controller.MainActivity">

    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="@drawable/welcomescreenbg"
            android:id="@+id/imageView"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:scaleType="centerCrop"
            android:contentDescription="@string/fontimage" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="1.0"/>
    <ImageView
            android:layout_width="132dp"
            android:layout_height="26dp" app:srcCompat="@drawable/swooshlogo"
            android:id="@+id/swooshlogo"
            android:scaleType="fitCenter"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
            android:layout_marginTop="24dp" app:layout_constraintTop_toTopOf="parent"
            android:contentDescription="@string/logo"/>
    <TextView
            android:text="@string/go_all_in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView" android:textColor="#FFFFFF"
            android:fontFamily="@font/montserrat" android:textSize="68sp" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintBottom_toTopOf="@+id/textView2" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/swooshlogo" app:layout_constraintVertical_bias="1.0"/>
    <TextView
            android:text="@string/on_going_all_out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2" android:textColor="#FFFFFF"
            android:fontFamily="@font/montserrat" android:textSize="34sp"
            android:textAlignment="center"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5" android:layout_marginBottom="24dp"
            app:layout_constraintBottom_toTopOf="@+id/guideline"/>
    <TextView
            android:text="@string/find_a_team_in_your_city_and_dominate_the_league"
            android:layout_height="83dp"
            android:id="@+id/textView3" android:textColor="@color/colorAccent"
            android:textAlignment="center" android:textSize="32sp"
            android:layout_width="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.0"
            android:fontFamily="@font/montserrat" android:layout_marginStart="32dp" android:layout_marginEnd="32dp"
            android:layout_marginTop="24dp" app:layout_constraintTop_toTopOf="@+id/guideline"
            android:layout_marginBottom="24dp" app:layout_constraintBottom_toTopOf="@+id/getStartedBtn"
            app:layout_constraintVertical_bias="0.0"/>
    <Button
            android:text="@string/get_started"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:id="@+id/getStartedBtn"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="32dp"
            android:fontFamily="@font/montserrat" android:textSize="37sp" android:textColor="@android:color/white"
            android:background="@drawable/swooshbtn" android:textAlignment="center" android:onClick="getStartedBtn"/>
    <androidx.constraintlayout.widget.Guideline
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/guideline"
            app:layout_constraintGuide_percent="0.5"/>

</androidx.constraintlayout.widget.ConstraintLayout>