<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="@drawable/welcomescreenbg"
            android:id="@+id/imageView2" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:scaleType="centerCrop" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="1.0" android:contentDescription="@string/fontimage"/>
    <ImageView
            android:layout_width="241dp"
            android:layout_height="60dp" app:srcCompat="@drawable/swooshlogo"
            android:layout_marginTop="42dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:contentDescription="@string/logo" android:id="@+id/imageView5"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView5" android:text="@string/go_all_in"
            android:textColor="@color/colorAccent" android:textSize="90sp" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:fontFamily="@font/montserrat"
            android:textAlignment="gravity" app:layout_constraintHorizontal_bias="0.501"
            android:layout_marginTop="240dp" app:layout_constraintTop_toBottomOf="@+id/imageView5"/>
    <TextView
            android:text="@string/on_going_all_out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView6" android:textAlignment="center"
            android:textSize="45sp" android:fontFamily="@font/montserrat" android:textColor="@color/colorAccent"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView5"/>
    <TextView
            android:text="@string/find_a_team_in_your_city_and_dominate_the_league"
            android:layout_width="504dp"
            android:layout_height="100dp"
            android:id="@+id/textView7" android:singleLine="false"
            android:textSize="36sp" android:textAlignment="center" android:fontFamily="@font/montserrat"
            android:textColor="@color/colorAccent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="104dp"
            app:layout_constraintTop_toBottomOf="@+id/textView6"/>
    <Button
            android:text="@string/get_started"
            android:layout_width="0dp"
            android:layout_height="92dp"
            android:id="@+id/button2"
            style="@style/Widget.AppCompat.Button.Borderless" android:background="@drawable/swooshbtn"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:textAlignment="center"
            android:textColor="@color/colorAccent" android:fontFamily="@font/montserrat" android:textSize="36sp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>